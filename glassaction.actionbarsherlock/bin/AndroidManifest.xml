<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manuelpeinado.glassactionbar.samples.actionbarsherlock" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />

    <!--  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.manuelpeinado.glassaction.samples.actionbarsherlock.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.manuelpeinado.glassaction.samples.actionbarsherlock.ScrollViewActivity"
            android:label="@string/activity_title_scrollview"
            android:theme="@style/AppTheme.TranslucentActionBar" />
        <activity
            android:name="com.manuelpeinado.glassaction.samples.actionbarsherlock.FixedHeaderActivity"
            android:label="@string/activity_title_fixed_header"
            android:theme="@style/AppTheme.TranslucentActionBar" />
        <activity
            android:name="com.manuelpeinado.glassaction.samples.actionbarsherlock.ChangingContentActivity"
            android:label="@string/activity_title_changing_content"
            android:theme="@style/AppTheme.TranslucentActionBar" />
        <activity
            android:name="com.manuelpeinado.glassaction.samples.actionbarsherlock.ListViewActivity"
            android:label="@string/activity_title_listview"
            android:theme="@style/AppTheme.TranslucentActionBar" />
        <activity
            android:name="com.manuelpeinado.glassaction.samples.actionbarsherlock.SettingsActivity"
            android:label="@string/activity_title_settings"
            android:theme="@style/AppTheme.TranslucentActionBar" />
    </application>

</manifest>
